<div class="container col-md-6 col-md-offset-3 well well-lg">
    <form>
      <legend>Create a Tweet</legend>
      <div class="form-group">
        {{input value=username class="form-control" placeholder="username"}}
      </div>
      <div class="form-group">
        {{input value=post class="form-control" placeholder="Your tweet" maxlength="141"}}
      </div>
    <button class="btn btn-default" {{action 'addTweet'}}>Submit</button>
  </form>
  <br>
  <div class="panel panel-default">
    <div class="panel-heading">Tweets</div>
      <div class="panel-body">

        {{#each controller}}
        <div class="well tweet">
          <div {{action 'toggleDate'}}>
            {{username}} {{post}} {{comments}}
          </div>
          {{#if isDateShowing}}
            <br>{{date}}
            <form>
              <h3>Comment on Tweet:</h3>
              <div class="form-group">
                {{input value=commentersname class="form-control" placeholder="Your name"}}
              </div>
              <div class="form-group">
                {{input value=comment class="form-control" placeholder="Your Comment" maxlength="141"}}
              </div>
              <button class="btn btn-default" {{action 'addComment' comment}}>Submit</button>
            </form>
          {{/if}}
        </div>
        {{/each}}
      </div>
  </div>
</div>
